{
    "manifest_version": 3,
    "name": "Voice to Emoji for WhatsApp",
    "version": "1.0",
    "description": "Send emojis with your voice on WhatsApp Web!",
    "permissions": ["activeTab", "scripting", "microphone"],
    "host_permissions": ["*://web.whatsapp.com/*"],
    "content_scripts": [
      {
        "matches": ["*://web.whatsapp.com/*"],
        "js": ["inject.js"]
      }
    ],
    "icons": {
      "48": "icon.png"
    }
  }
  